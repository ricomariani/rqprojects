<Window x:Class="GameAid.ResultSummary"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Results Summary" Height="400" Width="800">
    <Grid>
        <DockPanel>
            <StackPanel Margin="0,10,0,5" DockPanel.Dock="Bottom" Orientation="Horizontal" FlowDirection="RightToLeft">
                <Canvas Width="5"></Canvas>
                <Button Height="23" Width="75" IsCancel="True" IsDefault="True">OK</Button>
            </StackPanel>
        <ListBox HorizontalAlignment="Stretch" Name="listResults" VerticalAlignment="Stretch" />
        </DockPanel>
    </Grid>
</Window>
