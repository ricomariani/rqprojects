<Window x:Class="GameAid.ManyKey"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"       
        Title="Many Keys Dialog" Width="642" SizeToContent="Height" ResizeMode="NoResize" Icon="http://yourserver.com/uploads/youricon.jpg">
    <Grid Name="grid" Background="{DynamicResource LightBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="Auto" MinWidth="75"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>

        </Grid.RowDefinitions>
        <Button Grid.Row="1" Grid.Column="3" HorizontalAlignment="Right" IsDefault="True" Margin="0,5,100,0" Name="buttonOK" VerticalAlignment="Top" Click="buttonOK_Click" Width="75">OK</Button>
        <Button Grid.Row="1" Grid.Column="3" HorizontalAlignment="Right" IsCancel="True" Margin="0,5,0,0" Name="buttonCancel" VerticalAlignment="Top" Width="75">Cancel</Button>
    </Grid>
</Window>
