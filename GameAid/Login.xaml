<Window x:Class="GameAid2008.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Sign In" Height="186" Width="537">
    <Grid Background="{DynamicResource LightBrush}">
        
        <Label Height="28" HorizontalAlignment="Left" Margin="21,22,0,0" Name="label1" VerticalAlignment="Top" Width="64">Nick:</Label>
        <Label HorizontalAlignment="Left" Margin="21,55,0,36" Name="label2" Width="64">Server:</Label>
        <TextBox Margin="98,57,35,0" Name="server" VerticalAlignment="Top">yourserver.com</TextBox>
        <TextBox Margin="98,24,35,0" Name="nick" Height="23" VerticalAlignment="Top" />
        <Button Height="23" HorizontalAlignment="Left" Margin="98,0,0,19" Name="buttonOK" VerticalAlignment="Bottom" Width="75" IsDefault="True" Click="buttonOK_Click">OK</Button>
        <Button Height="23" HorizontalAlignment="Right" Margin="0,0,35,19" Name="buttonCancel" VerticalAlignment="Bottom" Width="75" IsCancel="True">Cancel</Button>
    </Grid>
</Window>
